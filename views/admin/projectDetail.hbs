  <form action="#" method="POST">
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
           value="{{project.name}}"
            name="name"
          />
        </div>
      </div>
      <div class="col-md-6">
        <div class="mb-3">
          <label for="alias" class="form-label">Alias</label>
          <input
            type="text"
            class="form-control"
            id="alias"
           value="{{project.alias}}"
            name="alias"
            readonly
          />
        </div>
      </div>
      <div class="col-md-6">
        <div class="mb-3">
          <label for="github" class="form-label">Github URL</label>
          <input
            type="text"
            class="form-control"
            id="github"
            value="{{project.githubUrl}}"
            name="github"
          />
        </div>
      </div>

      <div class="col-md-6">
        <div class="mb-3">
          <label for="tags" class="form-label">Tags</label>
          <input
            type="text"
            class="form-control"
            id="tags"
            value="{{#each project.tags}}{{this.name}}&nbsp;{{/each}}"
            name="tags"
          />
        </div>
      </div>
      <div class="col-md-6">
        <div class="mb-3">
          <textarea
            class="form-control"
            name="description"
            name="description"
            id="desc"
            rows="3"
          > {{project.description}}</textarea>
        </div>
      </div>
        <div class="col-md-6">
        <div class="mb-3">
         <img src="/images/mean.jfif" width="250px" alt="mern">
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
